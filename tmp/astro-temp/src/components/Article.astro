---
export interface Props {
	title: string;
	date: string;
	description: string;
	url?: string;
	isLatest?: boolean;
}

const { title, date, description, url, isLatest = false } = Astro.props;

const articleClasses = isLatest ? "section-accent" : "section-highlight";

const headingClasses = isLatest
	? "text-xl font-light text-flower-700 dark:text-flower-400 mb-phi-2"
	: "text-xl font-light text-sage-700 dark:text-sage-400 mb-phi-2";
---

<article class={articleClasses}>
  {url ? (
    <a href={url} class="block hover:opacity-80 transition-opacity">
      <h2 class={headingClasses}>{title}</h2>
      <p class="text-accent mb-phi-2 text-sm">
        <time>{date}</time>
      </p>
      <p class="text-primary leading-relaxed">{description}</p>
    </a>
  ) : (
    <>
      <h2 class={headingClasses}>{title}</h2>
      <p class="text-accent mb-phi-2 text-sm">
        <time>{date}</time>
      </p>
      <p class="text-primary leading-relaxed">{description}</p>
    </>
  )}
</article>
