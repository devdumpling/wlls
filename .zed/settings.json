{
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true,
          "unstable": true
        }
      }
    }
  },
  "languages": {
    "JavaScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    },
    "TypeScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    },
    "TSX": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    },
    "Svelte": {
      "language_servers": ["deno", "svelte-language-server"],
      "formatter": {
        "external": {
          "command": "deno",
          "arguments": ["fmt", "--ext", "svelte", "-"]
        }
      }
    }
  }
}
