---
import Layout from "../layouts/Layout.astro";
import Stats from "../components/Stats.astro";
import MoreStats from "../components/MoreStats.astro";
---

<Layout title="Stats Components Demo">
  <main class="min-h-screen flex flex-col justify-center px-phi-4 max-w-[65ch] mx-auto">
    <!-- Basic Stats Component -->
    <Stats />
    
    <!-- More Stats Component with default values -->
    <MoreStats />
    
    <hr class="my-phi-6 border-sage-200" />
    
    <!-- Custom Stats Example -->
    <h2 class="text-lg font-light mb-phi-3 text-bark-600">Custom Stats Example:</h2>
    
    <Stats 
      level={42} 
      class="Full Stack Developer" 
      guild="indie" 
    />
    
    <MoreStats 
      traits={["Coffee Enthusiast", "Early Riser", "Vim User", "Terminal Dweller"]}
      spells={[
        { name: "JavaScript", level: 5 },
        { name: "Python", level: 4 },
        { name: "Rust", level: 3 },
        { name: "Elixir", level: 2 },
      ]}
      tools={["Neovim", "tmux", "Fish", "Alacritty", "Raycast"]}
    />
    
    <footer class="mt-phi-8 text-sm text-bark-500">
      <a href="/" class="text-forest hover:text-sage-600 transition-colors">‚Üê Back to Home</a>
    </footer>
  </main>
</Layout>