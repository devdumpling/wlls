<script>
import { animate, onScroll, svg } from "animejs";

const sections = [
  {
    id: 'blue-ridge',
    title: 'Blue Ridge Mountains',
    subtitle: 'Southern Virginia, Early Days',
    content: 'It began with floppy disks and RuneScape bots. A poor kid who discovered the magic of code.',
    year: '1993-2011',
    icon: 'M3 18L10 10L14 14L21 7'
  },
  {
    id: 'oberlin',
    title: 'Oberlin College',
    subtitle: 'Liberal Arts & Computer Science',
    content: 'Four years of deep learning disguised as mediocre grades. The foundation was stronger than it seemed.',
    year: '2011-2015',
    icon: 'M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z'
  },
  {
    id: 'madison',
    title: 'Madison, WI',
    subtitle: 'Teaching & Bartending',
    content: 'Found unexpected love for teaching kids to code. Nights behind the bar, days inspiring the next generation.',
    year: '2015-2018',
    icon: 'M5 12V7a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v5M5 12l-2 7h8l-2-7'
  },
  {
    id: 'columbus',
    title: 'Columbus, OH',
    subtitle: 'Enterprise & Growth',
    content: 'Massive energy company. Learned what I didn\'t want. Met my future wife at a vegan pizza party.',
    year: '2018-2021',
    icon: 'M3 21h18M5 21V7l8-4v18'
  },
  {
    id: 'current',
    title: 'Present Day',
    subtitle: 'GoodRx & Family Life',
    content: 'Principal Engineer, two daughters, and the journey continues. Still learning at the edge of my abilities.',
    year: '2021-Now',
    icon: 'M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z'
  }
];

document.addEventListener('DOMContentLoaded', () => {
  // Progress character elements
  const progressTrunk = document.querySelector('.progress-trunk');
  const progressFlower = document.querySelector('.progress-flower');
  
  // Create scroll progress indicator
  const storyContainer = document.querySelector('.story-container');
  
  // Manual scroll progress tracking for smooth bidirectional animation
  function updateTreeProgress() {
    const scrollTop = window.scrollY;
    const docHeight = document.documentElement.scrollHeight;
    const winHeight = window.innerHeight;
    const scrollPercent = scrollTop / (docHeight - winHeight);
    
    // Grow trunk based on overall scroll progress
    const trunkHeight = 15 + (scrollPercent * 80); // 15% to 95%
    progressTrunk.style.height = `${trunkHeight}%`;
    
    // Flower blooms when we reach the end (80%+ for final sections)
    if (scrollPercent > 0.8) {
      if (progressFlower) {
        progressFlower.style.opacity = '1';
        progressFlower.style.transform = 'scale(1)';
      }
    } else {
      if (progressFlower) {
        progressFlower.style.opacity = '0';
        progressFlower.style.transform = 'scale(0)';
      }
    }
  }
  
  // Initialize smooth scroll-driven animations for each section
  const sectionElements = sections.map(section => {
    const sectionEl = document.querySelector(`#${section.id}`);
    if (!sectionEl) return null;

    const sectionContent = sectionEl.querySelector('.section-content');
    const sectionIcon = sectionEl.querySelector('.section-icon');
    const svgPaths = sectionIcon.querySelectorAll('path');
    const textElements = sectionEl.querySelectorAll('.animate-text');

    // Initialize SVG paths for drawing animation
    svgPaths.forEach(path => {
      const pathLength = path.getTotalLength();
      path.style.strokeDasharray = pathLength;
      path.style.strokeDashoffset = pathLength;
      path.style.strokeWidth = '2';
      path.style.fill = 'none';
      path.style.strokeLinecap = 'round';
      path.style.strokeLinejoin = 'round';
    });

    // Set initial states
    if (sectionContent) {
      sectionContent.style.opacity = '0';
      sectionContent.style.transform = 'translateY(60px)';
    }
    if (sectionIcon) {
      sectionIcon.style.opacity = '0';
      sectionIcon.style.transform = 'scale(0)';
    }
    textElements.forEach(el => {
      el.style.opacity = '0';
      el.style.transform = 'translateY(20px)';
    });

    return {
      section,
      element: sectionEl,
      content: sectionContent,
      icon: sectionIcon,
      svgPaths,
      textElements,
      animated: false
    };
  }).filter(Boolean);

  // Smooth scroll handler
  function handleSectionAnimations() {
    const viewportHeight = window.innerHeight;
    const scrollTop = window.scrollY;

    sectionElements.forEach(({ element, content, icon, svgPaths, textElements, animated }, index) => {
      if (!element) return;

      const rect = element.getBoundingClientRect();
      const elementTop = scrollTop + rect.top;
      const elementBottom = elementTop + rect.height;
      
      // Calculate when element should start animating (when bottom 1/3 enters viewport)
      const triggerPoint = elementTop - viewportHeight * 0.7;
      const hasEntered = scrollTop > triggerPoint;
      
      // Only animate once when entering
      if (hasEntered && !animated) {
        sectionElements[index].animated = true;
        
        // Animate section content
        if (content) {
          animate(content, {
            translateY: [60, 0],
            opacity: [0, 1],
            duration: 600,
            easing: 'outExpo'
          });
        }

        // Animate icon
        if (icon) {
          animate(icon, {
            scale: [0, 1],
            opacity: [0, 1],
            duration: 500,
            delay: 100,
            easing: 'outBack'
          });
        }

        // Animate SVG paths
        if (svgPaths.length > 0) {
          animate(svgPaths, {
            strokeDashoffset: 0,
            duration: 1000,
            delay: 200,
            easing: 'outExpo'
          });
        }

        // Animate text elements with stagger
        if (textElements.length > 0) {
          animate(textElements, {
            translateY: [20, 0],
            opacity: [0, 1],
            duration: 400,
            delay: (el, i) => 300 + (i * 80),
            easing: 'outExpo'
          });
        }
      }
    });
  }

  // Handle final navigation animation
  const finalNav = document.querySelector('.final-nav');
  let finalNavAnimated = false;
  
  function handleFinalNavAnimation() {
    if (!finalNav || finalNavAnimated) return;
    
    const rect = finalNav.getBoundingClientRect();
    const scrollTop = window.scrollY;
    const elementTop = scrollTop + rect.top;
    const viewportHeight = window.innerHeight;
    
    // Trigger when element is 50% visible
    const triggerPoint = elementTop - viewportHeight * 0.5;
    const hasEntered = scrollTop > triggerPoint;
    
    if (hasEntered) {
      finalNavAnimated = true;
      animate(finalNav, {
        translateY: [30, 0],
        opacity: [0, 1],
        duration: 600,
        easing: 'outExpo'
      });
    }
  }

  // Combined scroll handler for section animations
  let scrollTicking = false;
  function handleAllScrollAnimations() {
    handleSectionAnimations();
    handleFinalNavAnimation();
    updateTreeProgress();
    scrollTicking = false;
  }

  // Add scroll listener with requestAnimationFrame
  window.addEventListener('scroll', () => {
    if (!scrollTicking) {
      requestAnimationFrame(handleAllScrollAnimations);
      scrollTicking = true;
    }
  }, { passive: true });

  // Initial check
  handleAllScrollAnimations();
  
});
</script>

