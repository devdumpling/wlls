---
export interface Props {
  level?: number;
  class?: string;
  guild?: string;
}

const { level = 30, class: playerClass = "Principal Engineer", guild = "GoodRx" } = Astro.props;
---

<div class="stats">
  <div class="stat">
    <span class="label">LVL</span>
    <span class="value">{level}</span>
  </div>
  <div class="stat">
    <span class="label">CLASS</span>
    <span class="value">{playerClass}</span>
  </div>
  <div class="stat">
    <span class="label">GUILD</span>
    <span class="value">{guild}</span>
  </div>
</div>

<style>
  .stats {
    display: flex;
    gap: var(--spacing-phi-4);
    margin-bottom: var(--spacing-phi-4);
    flex-wrap: wrap;
  }

  .stat {
    background: var(--color-sage-50);
    padding: var(--spacing-phi-3) var(--spacing-phi-4);
    border-radius: 0.25rem;
    border: 1px solid var(--color-sage-200);
  }

  .label {
    display: block;
    font-family: var(--font-mono);
    font-size: var(--font-size-xs);
    color: var(--color-bark-600);
    letter-spacing: 0.1em;
    margin-bottom: var(--spacing-phi-1);
  }

  .value {
    display: block;
    font-size: var(--font-size-lg);
    color: var(--color-forest);
    font-weight: 300;
  }
</style>