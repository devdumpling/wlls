{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "nodeModulesDir": "auto",
  "workspace": ["./apps/*", "./platform/*", "./libs/*"],
  "tasks": {
    "dev:blog": "deno task --filter 'blog' dev",
    "build:blog": "deno task --filter 'blog' build",
    "test": "deno test",
    "lint": "deno lint",
    "format": "deno fmt"
  },
  "lint": {
    "include": ["apps/", "platform/", "libs/"],
    "exclude": [
      "**/node_modules",
      "**/dist",
      "**/build",
      "**/.svelte-kit",
      "**/.deno-deploy",
      "**/.vite"
    ],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "include": ["apps/", "platform/", "libs/"],
    "exclude": ["**/node_modules", "**/dist", "**/build", "**/.deno-deploy"],
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "unstable": ["fmt-component"],
  "imports": {
    "@deno/svelte-adapter": "npm:@deno/svelte-adapter@^0.1.0"
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.svelte-kit",
    "**/.deno-deploy",
    "**/.vite"
  ]
}
